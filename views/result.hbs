<div class="container mt-5">
  <h2>短網址產生器</h2>
  <img src="https://assets-lighthouse.alphacamp.co/uploads/image/file/16716/ExportedContentImage_00.png" alt="短網址圖標">
  <div class="alert alert-info" role="alert">
    <span class="mr-2">{{{ result }}}</span>
  </div>
  {{{ copy }}}
  <script>
    function copyToClipboard() {
      const copyText = document.getElementById("shortUrl").innerText;
      try {
        navigator.clipboard.writeText(copyText);
        alert("短網址已複製！");
      } catch (err) {
        alert("無法複製短網址。");
      }
    }
  </script>
</div>